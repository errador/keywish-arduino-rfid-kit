int Led=A5;//定义LED 接口  
int SensorPin=A0;
int val=0;
void setup() 
{  
  pinMode(Led,OUTPUT);//定义LED 为输出接口  
  pinMode(SensorPin,INPUT);
  Serial.begin(9600);
}  
void loop() 
{  
  val=digitalRead(SensorPin);
  Serial.println(val);
  if(val==1)
     { 
       digitalWrite(Led,HIGH); 
     } 
  else 
     {  
       digitalWrite(Led,LOW); 
     } 
}
